#!/usr/bin/env bash
set -e

ENDPOINT="http://localhost:8000"
export AWS_ACCESS_KEY_ID=dummy
export AWS_SECRET_ACCESS_KEY=dummy
REGION="us-east-1"

echo "=== Eligible Voters (Single-Table) ==="
echo ""

if [ -n "$1" ]; then
    # Query specific election (PK = ELECTION#name, SK begins with VOTER#)
    result=$(aws dynamodb query \
        --table-name vote_data \
        --key-condition-expression "PK = :pk AND begins_with(SK, :sk)" \
        --expression-attribute-values "{\":pk\":{\"S\":\"ELECTION#$1\"},\":sk\":{\"S\":\"VOTER#\"}}" \
        --endpoint-url "$ENDPOINT" \
        --region "$REGION" \
        2>/dev/null)

    count=$(echo "$result" | jq -r '.Count // 0')

    if [ "$count" -eq 0 ]; then
        echo "No eligible voters found for election: $1"
    else
        echo "Found $count eligible voter(s) for election: $1"
        echo ""
        echo "$result" | jq -r '.Items[] | "  - " + .voterName.S'
    fi
else
    # Scan all voters (SK begins with VOTER#)
    result=$(aws dynamodb scan \
        --table-name vote_data \
        --filter-expression "begins_with(SK, :sk)" \
        --expression-attribute-values '{":sk":{"S":"VOTER#"}}' \
        --endpoint-url "$ENDPOINT" \
        --region "$REGION" \
        2>/dev/null)

    count=$(echo "$result" | jq -r '.Count // 0')

    if [ "$count" -eq 0 ]; then
        echo "No eligible voters found."
    else
        echo "Found $count eligible voter(s):"
        echo ""
        echo "$result" | jq -r '.Items[] |
            "Election: " + .electionName.S + "\n" +
            "Voter:    " + .voterName.S + "\n"'
    fi

    echo ""
    echo "Tip: Run with election name to see voters for specific election:"
    echo "  ./scripts/inspect-dynamodb-voters \"Best Programming Language\""
fi
