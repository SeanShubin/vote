#!/usr/bin/env bash
set -e

echo "=========================================="
echo "Tearing down DynamoDB Local (Single-Table)"
echo "=========================================="
echo ""

# Note: We don't stop/remove the container since it's shared with multi-table setup
# Just delete the single-table schema tables
echo "Note: DynamoDB Local container is shared with multi-table setup"
echo "To delete tables, use AWS CLI delete-table commands"
echo "To stop the container, use: ./scripts/db-teardown-dynamodb"

echo ""
echo "=========================================="
echo "Teardown complete!"
echo "=========================================="
