#!/usr/bin/env bash
set -e

# Convenience script - launches fresh development environment with DynamoDB
# For all 4 combinations, see:
#   ./scripts/launch-fresh-mysql      - Fresh start with MySQL
#   ./scripts/launch-fresh-dynamodb   - Fresh start with DynamoDB (this script)
#   ./scripts/launch-keep-mysql       - Keep existing MySQL data
#   ./scripts/launch-keep-dynamodb    - Keep existing DynamoDB data

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Launching fresh development environment (DynamoDB)..."
echo "For other options, run: ls scripts/launch-*"
echo

"$SCRIPT_DIR/launch-fresh-dynamodb"
