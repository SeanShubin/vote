#!/usr/bin/env bash
set -e

ENDPOINT="http://localhost:8000"
REGION="us-east-1"
export AWS_ACCESS_KEY_ID=dummy
export AWS_SECRET_ACCESS_KEY=dummy

echo "=== Users Table ==="
echo ""

result=$(aws dynamodb scan \
    --table-name vote_users \
    --endpoint-url "$ENDPOINT" \
    --region "$REGION" \
    2>/dev/null)

count=$(echo "$result" | jq -r '.Count // 0')

if [ "$count" -eq 0 ]; then
    echo "No users found."
else
    echo "Found $count user(s):"
    echo ""
    echo "$result" | jq -r '.Items[] |
        "Name:  " + .name.S + "\n" +
        "Email: " + .email.S + "\n" +
        "Role:  " + .role.S + "\n" +
        "Salt:  " + .salt.S + "\n" +
        "Hash:  " + .hash.S + "\n"'
fi
