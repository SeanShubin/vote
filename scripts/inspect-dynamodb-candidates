#!/usr/bin/env bash
set -e

ENDPOINT="http://localhost:8000"
export AWS_ACCESS_KEY_ID=dummy
export AWS_SECRET_ACCESS_KEY=dummy
REGION="us-east-1"

echo "=== Candidates (Single-Table) ==="
echo ""

if [ -n "$1" ]; then
    # Query specific election (PK = ELECTION#name, SK begins with CANDIDATE#)
    result=$(aws dynamodb query \
        --table-name vote_data \
        --key-condition-expression "PK = :pk AND begins_with(SK, :sk)" \
        --expression-attribute-values "{\":pk\":{\"S\":\"ELECTION#$1\"},\":sk\":{\"S\":\"CANDIDATE#\"}}" \
        --endpoint-url "$ENDPOINT" \
        --region "$REGION" \
        2>/dev/null)

    count=$(echo "$result" | jq -r '.Count // 0')

    if [ "$count" -eq 0 ]; then
        echo "No candidates found for election: $1"
    else
        echo "Found $count candidate(s) for election: $1"
        echo ""
        echo "$result" | jq -r '.Items[] | "  - " + .candidateName.S'
    fi
else
    # Scan all candidates (SK begins with CANDIDATE#)
    result=$(aws dynamodb scan \
        --table-name vote_data \
        --filter-expression "begins_with(SK, :sk)" \
        --expression-attribute-values '{":sk":{"S":"CANDIDATE#"}}' \
        --endpoint-url "$ENDPOINT" \
        --region "$REGION" \
        2>/dev/null)

    count=$(echo "$result" | jq -r '.Count // 0')

    if [ "$count" -eq 0 ]; then
        echo "No candidates found."
    else
        echo "Found $count candidate(s):"
        echo ""
        echo "$result" | jq -r '.Items[] |
            "Election:  " + .electionName.S + "\n" +
            "Candidate: " + .candidateName.S + "\n"'
    fi

    echo ""
    echo "Tip: Run with election name to see candidates for specific election:"
    echo "  ./scripts/inspect-dynamodb-candidates \"Best Programming Language\""
fi
