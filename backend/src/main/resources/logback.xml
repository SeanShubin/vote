<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for stdout (captured by log files) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Application logger with more detail -->
    <logger name="com.seanshubin.vote" level="DEBUG" />

    <!-- Log AWS SDK at INFO to reduce noise -->
    <logger name="aws" level="INFO" />
    <logger name="software.amazon" level="INFO" />

    <!-- Log Jetty at INFO -->
    <logger name="org.eclipse.jetty" level="INFO" />
</configuration>
